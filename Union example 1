#include <stdio.h>
union student 
{ 
    int id;
    char name[20];
};
void main()
{
    union student s;
    printf ("enter a id :");
    scanf ("%d",&s.id);
    printf ("%d",s.id);
    printf ("\nenter a name :");
    scanf ("%s",&s.name);
    printf ("%s",s.name);
}

