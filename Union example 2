#include <stdio.h>
union student 
{ 
    int id;
    char name[20];
};
void main()
{
    union student s ,s1;
    printf ("enter a id :");
    scanf ("%d",&s.id);
    printf ("\n%d",s.id);
    scanf ("%d",&s1.id);
    printf ("\n%d",s1.id);
    printf ("\nenter a name :");
    scanf ("%s",&s.name);
    printf ("\n%s",s.name);
    scanf ("%s",&s1.name);
    printf ("\n%s",s1.name);
    
}


**********************************************************************************

OUTPUT  :


    enter a id :1
     1

   2

     2

   enter a name : harinisri  

   harinisri

 kavimalar

   kavimalar


*****************************************************************************
